<h1>Posts</h1>

<%= form_for Post.new do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <%= f.label :is_private %>
  <%= f.check_box :is_private %>
  <%= f.submit %>
<% end %>

<ul>
  <% for post in @posts %>
  <li><%= "#{post.title} | #{post.content}" %></li>
  <% end %>
</ul>